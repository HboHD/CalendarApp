<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="425.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pajh.calendar.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Otwórz" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Zapisz" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Zapisz jako..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleExportDatabase" text="Eksportuj do bazy danych" />
                  <MenuItem mnemonicParsing="false" onAction="#handleImportDatabase" text="Importuj z bazy danych" />
                  <MenuItem fx:id="settings" mnemonicParsing="false" onAction="#handleSettingEvent" text="Ustawienia" />
              <MenuItem mnemonicParsing="false" text="Zamknij" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleDeleteOlderThan" text="Usuń starsze niż..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleMenuAboutEvent" text="O programie" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
